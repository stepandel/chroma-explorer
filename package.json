  "main": "dist-electron/main.js",
  "type": "module",
  "build": {
    "appId": "com.chroma.explorer",
    "productName": "Chroma Explorer",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.png",
      "target": ["dmg", "zip"]
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ]
  },
